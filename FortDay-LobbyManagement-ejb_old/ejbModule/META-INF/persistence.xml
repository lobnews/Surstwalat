<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="FortDayDB" transaction-type="JTA">
		<jta-data-source>java:app/jdbc/ChatDB</jta-data-source>
		<class>de.fh_dortmund.inf.cw.surstwalat.lobbymanagement.model.Account</class>
		<class>de.fh_dortmund.inf.cw.surstwalat.lobbymanagement.model.Game</class>
		<class>de.fh_dortmund.inf.cw.surstwalat.lobbymanagement.model.Item</class>
		<class>de.fh_dortmund.inf.cw.surstwalat.lobbymanagement.model.Player</class>
		<class>de.fh_dortmund.inf.cw.surstwalat.lobbymanagement.model.Token</class>
		<properties>
			<property name="eclipselink.target-database" value="MySQL"/>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.logging.level" value="INFO"/>
		</properties>
	</persistence-unit>
</persistence>
